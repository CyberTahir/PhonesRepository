<Window x:Class="Phones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phones" d:DataContext="{d:DesignInstance Type=local:PhonesViewModel}"
        mc:Ignorable="d"
        Title="Phones" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.8*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <ListBox Grid.Column="0" SelectedItem="{Binding SelectedPhone}" />
        </Grid>

        <StackPanel Grid.Column="1" DataContext="{Binding SelectedPhone}" >
            <TextBlock Text="Выбранный элемент" />
            <TextBlock Text="Модель" />
            <TextBlock Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Производитель" />
            <TextBlock Text="{Binding Company, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Цена" />
            <TextBox Name="PhonePrice" Text="{Binding Price}" />
            <Button Content="Изменить" Click="Price_Edit"/>
        </StackPanel>
    </Grid>
</Window>
